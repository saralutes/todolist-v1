<%- include('header'); -%>
    <div class="box heading">
        <h1> <%= listTitle %> </h1>
    </div>
    <div class="box" id="">
        <% for( let i = 0; i < newListItems.length; i++ ) { %>
            <div class="item">
                <input type="checkbox">
                <p><%=newListItems[i]%></p>
            </div>
            <% } %>
        <form class="item" action="/" method="post" value="">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button class="btn" name="list" value="<%= listTitle %>" type="submit">+</button>
        </form>
    </div> 
    <div class="box heading">
        <form action="/return" method="post">
            <button class="btn-lg" name="remove" type="submit">Return to Main Page</button>
        </form>
    </div>
<%- include('footer'); -%>
